<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <org.matheclipse.android.CandidateView
        android:id="@+id/candidate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <org.matheclipse.android.EditTextExtend
        android:id="@+id/txt_input"
        style="?android:attr/textViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:imeOptions="actionDone"
        android:inputType="none"
        android:textSize="16sp" >
    </org.matheclipse.android.EditTextExtend>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/symjaInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            android:background="@android:drawable/bottom_bar"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/cmd_sym"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="1.0"
                android:text="Sym" />

            <Button
                android:id="@+id/cmd_num"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="1.0"
                android:text="Num" />

            <Button
                android:id="@+id/cmd_load_scratch"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="1.0"
                android:text="Load" />

            <Button
                android:id="@+id/cmd_save_scratch"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="1.0"
                android:text="Save" />

            <Button
                android:id="@+id/cmd_clear"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="1.0"
                android:text="Clear" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_output"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:scrollbars="vertical"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/lst_output"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="alwaysScroll" />

    <org.matheclipse.android.KeyboardViewExtend
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>